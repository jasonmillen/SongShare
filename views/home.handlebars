<style>

body, html {
  margin: 0;
  overflow: hidden;
  height:100%;
}

@media (min-width: 768px){
  #left {
    position: absolute;
    top: 60px;
    bottom: 0;
    left: 0;
    width: 25%;
    overflow-y: scroll; 
  }
  
  #right {
    position: absolute;
    top: 60px;
    bottom: 0;
    right: 0;
    overflow-y: scroll;
    width: 75%;
  }
}

#left {
  background-color: #fdffc9;
  text-align: center;
  height:100%;
}

#right {
  height:100%;
  background-color: #dee0e2;
  text-align: center;
}

</style>


<div class="user">
	{{#if user_info.id}}
		{{#if groups}}
			<div class="col-sm-4" id="left">
				{{#each groups}}
					<a href="#">
						<div class="groupTab" data-name={{this.name}} data-id={{this._id}}>
							<hr style="border: 1px solid #f00">
							{{this.name}} <br>
							Group Image <br>
							Other Stuff <br>
						</div>
					</a>
					<script type="text/javascript">

					</script>
					<a href="#">
						<div>
							<hr style="border: 1px solid #f00">
							{{this.name}} <br>
							Group Image <br>
							Other Stuff <br>
						</div>
					<a href="#">
						<div>
							<hr style="border: 1px solid #f00">
							{{this.name}} <br>
							Group Image <br>
							Other Stuff <br>
						</div>
					</a>
				{{/each}}
			</div>

			<div class="col-sm-8" id="right">
			</div>

		{{else}}
			<div> You have no groups right now </div>
		{{/if}}

	{{else}}
		<div> Log in through Spotify to see your groups/create a group </div>
		<a href="/login" class="btn btn-primary">Login</a>
	{{/if}}
</div>

<script>
	var groupTabs = document.getElementsByClassName("groupTab");
	for(var i = 0; i < groupTabs.length; i++) {
		$( groupTabs[i] ).on('click', function() {
			var $el = $(this);
			var groupName = $el.data('name');
			var groupId = $el.data('id');

			var parameters = {
				groupName: groupName,
				groupId: groupId
			};

			$.get('/groupData', parameters, function (data) {
				console.log(data);
				var groupDataElem = document.getElementById('right');

				for(var i = 0; i < data.length; i++) {
					var message = document.createElement('div');
					message.innerHTML = data[i].message;

					if(data[i].type == "track") {
						var track = document.createElement('iframe');
						track.src = "https://embed.spotify.com/?uri=spotify:track:" + data[i].trackId;
						track.id = "song";
						track.style.width = "300px";
						track.style.height = "80px";
						track.frameborder = "0";
						track.allowtransparency = "true";
						message.appendChild(track);
					}

					var hr = document.createElement('hr');
					hr.style.border = "1px solid #f00";
					groupDataElem.appendChild(hr);
					groupDataElem.appendChild(message);
				}
				var hr = document.createElement('hr');
				hr.style.border = "1px solid #f00";
				groupDataElem.appendChild(hr);

			});
		});
	}


</script>







